{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./build",
    "baseUrl": "./",
    // "rootDir": "./src",
    "paths": {
      "@/apollo-api": ["./src/apollo"],
      "@/model": ["./src/model"],
      "@/helper": ["./src/helper"],
      "@/lib": ["src/lib"],
      "@/generated/graphql": ["./src/apollo/types.generated"]
    },
    "strict": true,
    "declaration": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["./build", "node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
